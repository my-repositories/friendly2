{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "~/mocks/*": ["./__mocks__/*"],
      "~/*": ["./src/*"]
    },
    "types": [
      "reflect-metadata",
      "ts-jest"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
